# DeviceBox Konfiguration
# Kopiere diese Datei zu config.env und passe die Werte an

# GitHub Repository (Format: username/repository)
GITHUB_REPO=your-username/devicebox

# Anwendungsname
APP_NAME=devicebox

# Installationsverzeichnis
INSTALL_DIR=/opt/devicebox

# Datenverzeichnis
DATA_DIR=/opt/devicebox/data

# Service-Benutzer
SERVICE_USER=pi

# Web-Server Konfiguration
HOST=0.0.0.0
PORT=8080
DEBUG=False

# Update-Konfiguration
AUTO_UPDATE=False
UPDATE_CHECK_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/devicebox/logs/devicebox.log

# Sicherheit
SECRET_KEY=your-secret-key-here-change-this
